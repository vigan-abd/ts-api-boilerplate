{
  "name": "node-js-api-boilerplate",
  "author": {
    "name": "vigan.abd",
    "email": "vigan.abd@gmail.com"
  },
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "cli": "NODE_ENV=development node dist/bin/cli.js",
    "cli:staging": "NODE_ENV=staging node dist/bin/cli.js",
    "cli:prod": "NODE_ENV=production node dist/bin/cli.js",
    "compile": "tsc",
    "doc": "./node_modules/.bin/apidoc -i ./src/controllers/ -o ./docs/api",
    "start": "npm run compile && npm run start:dev",
    "start:dev": "npm run compile && cp -p src/config/development.env dist/config/development.env && PORT=4001 NODE_ENV=development nodemon ./dist/bin/www.js",
    "start:staging": "npm run compile && cp -p src/config/staging.env dist/config/staging.env && PORT=4001 NODE_ENV=staging pm2-runtime ./dist/bin/www.js",
    "start:prod": "npm run compile && cp -p src/config/production.env dist/config/production.env && PORT=4001 NODE_ENV=production pm2-runtime ./dist/bin/www.js",
    "test": "cp -p src/config/test.env dist/config/test.env && NODE_ENV=test ./node_modules/.bin/mocha ./dist/tests/index.test.js --timeout 5000",
    "watch": "tsc --watch"
  },
  "_moduleAliases": {
    "@config": "dist/config/",
    "@console": "dist/console/",
    "@containers": "dist/containers/",
    "@controllers": "dist/controllers/",
    "@events": "dist/events/",
    "@helpers": "dist/helpers/",
    "@listeners": "dist/listeners/",
    "@middlewares": "dist/middlewares/",
    "@models": "dist/models/",
    "@routes": "dist/routes/",
    "@services": "dist/services/",
    "@repositories": "dist/repositories/"
  },
  "dependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.0",
    "@types/glob": "^7.1.1",
    "@types/http-errors": "^1.6.1",
    "@types/joi": "^14.3.3",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.3.27",
    "@types/mongoose-paginate-v2": "^1.0.2",
    "@types/node": "^12.0.0",
    "@types/node-cron": "^2.0.2",
    "@types/sinon": "^7.0.11",
    "@types/socket.io": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "@types/winston": "^2.3.0",
    "awilix": "^3.0.9",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "command-line-args": "^5.0.2",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "ejs": "~2.5.7",
    "env-var": "^3.3.0",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "joi": "^13.6.0",
    "jwt-simple": "^0.5.1",
    "module-alias": "^2.2.0",
    "mongoose": "^5.2.12",
    "mongoose-paginate-v2": "^1.0.12",
    "node-cron": "^2.0.3",
    "node-env-file": "^0.1.8",
    "nodemon": "^1.18.3",
    "object-to-xml": "^2.0.0",
    "pm2": "^3.5.0",
    "simple-express-route-builder": "^0.1.1",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2",
    "winston": "^2.3.0",
    "winston-aws-cloudwatch": "^3.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "assert": "^1.4.1",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "node-mocks-http": "^1.7.3",
    "sinon": "^7.1.1",
    "typescript": "^3.4.5",
    "webpack": "^4.17.1",
    "webpack-command": "^0.4.1"
  },
  "apidoc": {
    "name": "Node App API",
    "version": "0.1.0",
    "description": "API Powering Node App.",
    "title": "Node App API Documentation",
    "url": "http://127.0.0.1:4001"
  }
}
